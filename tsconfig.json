{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015.promise",
            "es5"
        ],
        "sourceMap": false,
        "importHelpers": true,
        "allowJs": true
    },
    "include": [
        "test.ts",
        "tag/**/*.ts",
        "ui/**/*.ts",
        "formatters/**/*.ts",
        "util/**/*.ts",
        "binder/**/*.ts",
        "tool/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}